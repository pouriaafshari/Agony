<!-- rounded_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/color_rounded_background" />

    <!-- Rounded corners -->
    <corners android:radius="2dp" />

    <!-- Padding -->
    <padding
        android:left="15dp"
        android:top="3dp"
        android:right="15dp"
        android:bottom="3dp" />
</shape>
