<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow Layer -->
            <item android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/pressed_state_solid" />
                    <corners android:radius="2dp" />
                </shape>
            </item>

            <!-- Main Background Layer -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/default_state_solid" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default state -->
    <item>
        <layer-list>
            <!-- Shadow Layer -->
            <item android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/pressed_state_solid" />
                    <corners android:radius="2dp" />
                </shape>
            </item>

            <!-- Main Background Layer -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/default_state_solid" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
